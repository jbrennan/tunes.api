!!!5
%html{:lang => "en"}
	%head
		%title= (SiteName != nil ? SiteName : "")
		%meta{:charset => "utf-8"}
		%meta{:name => "viewport", :content => "width=device-width, initial-scale = 1.0"}
		
		<!-- 1140px Grid styles for IE -->
		<!--[if lte IE 9]><link rel="stylesheet" href="/styles/ie.css" type="text/css" media="screen" /><![endif]-->
		
		%link{:rel=>'stylesheet', :href=>'/styles/1140.css', :media => "screen"}
		%link{:rel=>'stylesheet', :href=>'/styles/user_tiger.css', :media => "screen"}
		%link{:rel => "author", :href => "mailto:jbrennan@nearthespeedoflight.com"}
		
		%script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
		%script{:src => "/js/app.js"}
		%script{:src => "/js/css3-mediaqueries.js"}
	%body
	
		%section{:id => "mast", :class => "container"}
			.row
				%header
					.twocol
					%a{:href => "/", :class => "fivecol mast_title"}= SiteName
					%nav{:class => "site_navigation threecol last"}
						%ul{:class => "nav_list"}
							%li
								%a{:href => "http://github.com/jbrennan/tunes.api"} Source on Github
					.twocol
					
					
		%section{:id => "content", :class => "container"}
			.row
				= yield
				
						
						
		%footer{:class => "container"}
			.row
				.twocol
				%p{:class => "eightcol"} Copyright 1988 - Present, Jason Brennan.